@model IEnumerable<Proyecto_Grupo_7_Progra_Avanzada.Models.Configuracion>

@{
    ViewData["Title"] = "Configuraciones de Comercio";
}

<div class="card custom-card mt-4">
    <div class="card-header custom-card-header-info text-center">
        <h1 class="h3 mb-0">Configuraciones de Comercio</h1>
        <p class="mb-0">Administración de parámetros y comisiones para los comercios.</p>
    </div>

    <div class="card-body">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="mb-3 text-center">
            <a asp-action="Create" class="btn btn-gold btn-lg mx-2">
                <i class="fas fa-plus-circle"></i> Registrar Nueva Configuración
            </a>
            <a asp-controller="Comercios" asp-action="Index" class="btn btn-secondary btn-lg mx-2">
                <i class="fas fa-arrow-alt-circle-left"></i> Volver a Comercios
            </a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> No hay configuraciones registradas.
                <a asp-action="Create" class="alert-link">Registrar una nueva configuración</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.Comercio.Nombre)</th>
                            <th>Tipo de Configuración</th>
                            <th>@Html.DisplayNameFor(m => m.Comision)</th>
                            <th>@Html.DisplayNameFor(m => m.FechaDeRegistro)</th>
                            <th>@Html.DisplayNameFor(m => m.FechaDeModificacion)</th>
                            <th>@Html.DisplayNameFor(m => m.Estado)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Comercio.Nombre</td>
                                <td>@item.GetTipoConfiguracionTexto()</td>
                                <td><span class="fw-bold text-primary">@item.Comision%</span></td>
                                <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @(item.FechaDeModificacion.HasValue
                                                                ? item.FechaDeModificacion.Value.ToString("dd/MM/yyyy HH:mm")
                                                                : "-")
                        </td>
                        <td>
                            @if (item.Estado)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times-circle"></i> Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.IdConfiguracion"
                                       class="btn btn-gold btn-sm text-dark">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>