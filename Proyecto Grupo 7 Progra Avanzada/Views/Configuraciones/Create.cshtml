@model Proyecto_Grupo_7_Progra_Avanzada.Models.Configuracion

@{
    ViewData["Title"] = "Registrar Configuración";
}

<h1>Registrar Nueva Configuración</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow p-4 mt-4">
    <div class="card-header bg-primary text-white text-center">
        <h2 class="h4 mb-0">Nueva Configuración de Comercio</h2>
        <p class="mb-0">Complete todos los campos obligatorios para continuar.</p>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="IdComercio" class="form-label"></label>
                        <select asp-for="IdComercio" class="form-control" asp-items="ViewBag.Comercios">
                            <option value="">-- Seleccione un comercio --</option>
                        </select>
                        <span asp-validation-for="IdComercio" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="TipoConfiguracion" class="form-label"></label>
                        <select asp-for="TipoConfiguracion" class="form-control">
                            <option value="">-- Seleccione el tipo de configuración --</option>
                            <option value="1">1 - Plataforma</option>
                            <option value="2">2 - Externa</option>
                            <option value="3">3 - Ambas</option>
                        </select>
                        <small class="form-text text-muted">
                            <strong>Plataforma:</strong> Sincronización mediante la aplicación web<br />
                            <strong>Externa:</strong> Sincronización mediante API<br />
                            <strong>Ambas:</strong> Permite ambos escenarios
                        </small>
                        <span asp-validation-for="TipoConfiguracion" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Comision" class="form-label"></label>
                        <input asp-for="Comision" class="form-control" type="number" min="0" max="100" placeholder="Ej: 5" />
                        <small class="form-text text-muted">Porcentaje de comisión (0-100)</small>
                        <span asp-validation-for="Comision" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info mt-4">
                        <strong>Nota:</strong> La fecha de registro y el estado se asignarán automáticamente al guardar.
                    </div>
                </div>
            </div>

            <div class="form-group mt-4 text-center">
                <button type="submit" class="btn btn-success btn-lg mx-2">
                    <i class="fas fa-save"></i> Registrar Configuración
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">
                    <i class="fas fa-arrow-alt-circle-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

