@model IEnumerable<Proyecto_Grupo_7_Progra_Avanzada.Models.Reporte>

@{
    ViewData["Title"] = "Reportes Mensuales";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">Reportes Mensuales</h1>
    <form asp-action="Generar" method="post">
        <button type="submit" class="btn btn-gold btn-lg">
            <i class="fas fa-chart-line"></i> Generar / Actualizar Reportes
        </button>
    </form>
</div>

<!-- Mensajes de Alerta (Éxito o Error) -->
@if (TempData["Ok"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Ok"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-times-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (Model == null || !Model.Any())
{
    <div class="alert alert-info mt-3" role="alert">
        <i class="fas fa-info-circle"></i> No hay reportes mensuales generados aún. Presione el botón "Generar Reportes" para comenzar.
    </div>
}
else
{
    <table class="app-table table-hover">
        <thead>
            <tr>
                <th>Comercio</th>
                <th>Cajas</th>
                <th>Recaudado</th>
                <th>SINPES</th>
                <th>Comisión</th>
                <th>Reporte de</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <!-- Nombre del comercio se obtiene a través de la propiedad de navegación -->
                        <strong>@item.Comercio?.Nombre</strong>
                    </td>
                    <td>@item.CantidadDeCajas</td>
                    <td>
                        <span class="fw-bold text-primary">₡@item.MontoTotalRecaudado.ToString("N2")</span>
                    </td>
                    <td>@item.CantidadDeSINPES</td>
                    <td>
                        <span class="fw-bold text-danger">₡@item.MontoTotalComision.ToString("N2")</span>
                    </td>
                    <td>
                        <!-- Formato solo mes y año -->
                        @item.FechaDelReporte.ToString("MMMM yyyy")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}