@model Proyecto_Grupo_7_Progra_Avanzada.Models.Comercio

@{
    ViewData["Title"] = "Detalles Comercio";
}

<div class="card custom-card mt-4">
    <div class="card-header custom-card-header-info text-center">
        <h1 class="h3 mb-0">Detalles del Comercio</h1>
        <h4 class="mb-0">@Model.Nombre</h4>
    </div>

    <div class="card-body">
        <dl class="row custom-dl">

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.Identificacion)</dt>
            <dd class="col-sm-8 custom-dd">@Html.DisplayFor(model => model.Identificacion)</dd>

            <dt class="col-sm-4 custom-dt">Tipo de Identificación</dt>
            <dd class="col-sm-8 custom-dd">
                @(Model.TipoIdentificacion == 1 ? "Física (Cédula)" : "Jurídica (Cédula Jurídica)")
            </dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-8 custom-dd">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-4 custom-dt">Tipo de Comercio</dt>
            <dd class="col-sm-8 custom-dd">
                @{
                    string tipoComercioDetalles = Model.TipoDeComercio switch
                    {
                        1 => "Restaurantes",
                        2 => "Supermercados",
                        3 => "Ferreterías",
                        4 => "Otros",
                        _ => "No Definido"
                    };
                }
                @tipoComercioDetalles
            </dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.Telefono)</dt>
            <dd class="col-sm-8 custom-dd">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.CorreoElectronico)</dt>
            <dd class="col-sm-8 custom-dd">@Html.DisplayFor(model => model.CorreoElectronico)</dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-8 custom-dd">@Html.DisplayFor(model => model.Direccion)</dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.FechaDeRegistro)</dt>
            <dd class="col-sm-8 custom-dd">@Model.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.FechaDeModificacion)</dt>
            <dd class="col-sm-8 custom-dd">
                @(Model.FechaDeModificacion.HasValue
                                ? Model.FechaDeModificacion.Value.ToString("dd/MM/yyyy HH:mm")
                                : "N/A")
            </dd>

            <dt class="col-sm-4 custom-dt">@Html.DisplayNameFor(model => model.Estado)</dt>
            <dd class="col-sm-8 custom-dd">
                @(Model.Estado
                                ? Html.Raw("<span class='badge bg-success'><i class='fas fa-check-circle'></i> Activo</span>")
                                : Html.Raw("<span class='badge bg-danger'><i class='fas fa-times-circle'></i> Inactivo</span>"))
            </dd>

        </dl>
    </div>

    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.IdComercio"
           class="btn custom-btn-warning btn-lg mx-2">
            <i class="fas fa-edit"></i> Editar
        </a>

        <a asp-action="Index"
           class="btn custom-btn-secondary btn-lg mx-2">
            <i class="fas fa-arrow-alt-circle-left"></i> Volver a la Lista
        </a>
    </div>
</div>