@model Proyecto_Grupo_7_Progra_Avanzada.Models.Comercio

@{
    ViewData["Title"] = "Editar Comercio";
}

<div class="card custom-card mt-4">
    <div class="card-header custom-card-header-warning text-center">
        <h1 class="h3 mb-0">Editar Comercio: @Model.Nombre</h1>
        <p class="mb-0">Solo los campos permitidos pueden ser modificados.</p>
    </div>

    <div class="card-body">

        <form asp-action="Edit">
            <input type="hidden" asp-for="IdComercio" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="row">
                <div class="col-md-6">

                    <!-- Identificación -->
                    <div class="form-group mb-3">
                        <label asp-for="Identificacion" class="form-label"></label>
                        <p class="form-control-static form-control custom-readonly">@Html.DisplayFor(model => model.Identificacion)</p>
                        <input type="hidden" asp-for="Identificacion" />
                    </div>

                    <!-- Tipo de identificación -->
                    <div class="form-group mb-3">
                        <label asp-for="TipoIdentificacion" class="form-label">Tipo de Identificación</label>

                        @{
                            string tipoIdentificacionProsa =
                                Model.TipoIdentificacion == 1
                                ? "Física (Cédula)"
                                : "Jurídica (Cédula Jurídica)";
                        }

                        <p class="form-control-static form-control custom-readonly">@tipoIdentificacionProsa</p>
                        <input type="hidden" asp-for="TipoIdentificacion" />
                        <span asp-validation-for="TipoIdentificacion" class="text-danger"></span>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control custom-input" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <!-- Tipo de comercio -->
                    <div class="form-group mb-3">
                        <label asp-for="TipoDeComercio" class="form-label">Tipo de Comercio</label>
                        <select asp-for="TipoDeComercio" class="form-select custom-input">
                            <option value="1">Restaurantes</option>
                            <option value="2">Supermercados</option>
                            <option value="3">Ferreterías</option>
                            <option value="4">Otros</option>
                        </select>
                        <span asp-validation-for="TipoDeComercio" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-6">

                    <!-- Teléfono -->
                    <div class="form-group mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control custom-input" placeholder="Ej: 8888-8888" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <!-- Correo -->
                    <div class="form-group mb-3">
                        <label asp-for="CorreoElectronico" class="form-label"></label>
                        <input asp-for="CorreoElectronico" class="form-control custom-input" placeholder="correo@dominio.com" />
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>

                    <!-- Dirección -->
                    <div class="form-group mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <textarea asp-for="Direccion" class="form-control custom-input" rows="3" placeholder="Detalle de la dirección física"></textarea>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <!-- Estado -->
                    <div class="form-group form-check mt-4">
                        <label class="form-check-label">
                            <input class="form-check-input custom-checkbox" asp-for="Estado" />
                            <strong class="ms-2">@Html.DisplayNameFor(model => model.Estado)</strong>
                        </label>
                    </div>

                </div>
            </div>

            <input type="hidden" asp-for="FechaDeRegistro" />
            <input type="hidden" asp-for="FechaDeModificacion" />

            <div class="form-group mt-4 text-center">
                <button type="submit" class="btn btn-warning btn-lg custom-btn-warning mx-2">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg custom-btn-secondary mx-2">
                    <i class="fas fa-arrow-alt-circle-left"></i> Regresar al Listado
                </a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}