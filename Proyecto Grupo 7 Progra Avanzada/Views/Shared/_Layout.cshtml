@using Microsoft.AspNetCore.Identity
@using Proyecto_Grupo_7_Progra_Avanzada.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banco Los Patitos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_Grupo_7_Progra_Avanzada.styles.css" asp-append-version="true" />

    <!-- CLAVE: Font Awesome para iconos de usuario y módulos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Banco Los Patitos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- ENLACES DE MÓDULOS (AUTORIZADOS) -->
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- MÓDULOS DEL ADMINISTRADOR Y CONTADOR -->
                            @if (User.IsInRole("Administrador") || User.IsInRole("Contador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Comercios" asp-action="Index">Comercios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Reportes" asp-action="Index">Reportes Mensuales</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Configuraciones" asp-action="Index">Configuraciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Sinpe" asp-action="Registrar">Registrar SINPE</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Bitacora" asp-action="Index">Bitacora</a>
                                </li>
                            }

                            <!-- MÓDULOS DEL CAJERO -->
                            @if (User.IsInRole("Cajero"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Cajas" asp-action="Index">Cajas</a>
                                </li>
                            }

                            <!-- MÓDULOS DEL ADMINISTRADOR EXCLUSIVAMENTE (Usuarios y Reserva de liquidez) -->
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="ReservaLiquidez" asp-action="Index">Reserva Liquidez</a>
                                </li>
                            }
                        }
                        else
                        {
                            
                        }
                    </ul>

                    <!-- PUNTO CLAVE: INCLUIR LA VISTA PARCIAL DE LOGIN/LOGOUT -->
                    <partial name="_LoginPartial" />
                    <!-- FIN DEL PUNTO CLAVE -->

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 flex-shrink-0">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 border-top text-muted bg-light">
        <div class="container">
            &copy; @DateTime.Now.Year - Banco Los Patitos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>