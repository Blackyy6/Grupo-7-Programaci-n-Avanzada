@model IEnumerable<Proyecto_Grupo_7_Progra_Avanzada.Models.Sinpes>

@{
    // El nombre de la caja se pasa a trav√©s de ViewData desde el controlador
    var nombreCaja = ViewData["NombreCaja"] as string ?? "Caja Desconocida";
    ViewData["Title"] = $"Pagos SINPE de {nombreCaja}";
}

<h1 class="display-4">Pagos SINPE de @nombreCaja</h1>
<p class="lead">Listado de todas las transacciones SINPE recibidas por esta caja.</p>

<div class="card shadow p-3">
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle"></i> No se encontraron pagos SINPE registrados para esta caja.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID Transacci√≥n</th>
                    <th>Tel√©fono Origen</th>
                    <th>Nombre Origen</th>
                    <th>Monto</th>
                    <th>Fecha de Registro</th>
                    <th>Descripci√≥n</th>
                    <th>Estado</th>
                    <th>Acciones</th> <!-- üîπ NUEVA COLUMNA -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#@item.IdSinpe</td>
                        <td>@item.TelefonoOrigen</td>
                        <td>@item.NombreOrigen</td>
                        <td>
                            <!-- Formato de moneda -->
                            <span class="text-success fw-bold">‚Ç°@item.Monto.ToString("N2")</span>
                        </td>
                        <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(string.IsNullOrWhiteSpace(item.Descripcion) ? "-" : item.Descripcion)</td>
                        <td>
                            @if (item.Estado)
                            {
                                <span class="badge bg-success">Sincronizado</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">No Sincronizado</span>
                            }
                        </td>
                        <td>
                            @if (!item.Estado)
                            {
                                <!-- Bot√≥n para sincronizar -->
                                <form asp-action="Sincronizar" asp-route-id="@item.IdSinpe" method="post" style="display:inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-success">
                                        <i class="fas fa-sync-alt"></i> Sincronizar
                                    </button>
                                </form>
                            }
                            else
                            {
                                <!-- Enlace a Bit√°cora filtrada -->
                                <a asp-controller="Bitacora" asp-action="Index" asp-route-tabla="Sinpes" class="btn btn-sm btn-info">
                                    <i class="fas fa-book"></i> Ver Bit√°cora
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="mt-4">
    <a asp-action="Index" asp-controller="Cajas" class="btn btn-secondary">
        <i class="fas fa-arrow-alt-circle-left"></i> Volver a Cajas
    </a>
</div>