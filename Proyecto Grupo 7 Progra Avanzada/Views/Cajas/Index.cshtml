@model IEnumerable<Proyecto_Grupo_7_Progra_Avanzada.Models.Caja>

@{
    ViewData["Title"] = "Cajas Registradas";
    // CLAVE: Obtener la bandera del controlador
    bool esCajero = (bool)(ViewData["EsCajero"] ?? false);
}

<div class="container mt-4">

    <h1 class="section-title mb-4">@ViewData["Title"]</h1>

    <div class="d-flex gap-2 mb-3">

        <!-- BOTÓN 1: REGISTRAR NUEVA CAJA -->
        <!-- REGLA: Ocultar si es Cajero -->
        @if (!esCajero)
        {
            <a asp-action="Create" class="btn btn-gold">
                <i class="bi bi-plus-circle"></i> Registrar Nueva Caja
            </a>
        }

        <!-- BOTÓN 2: VOLVER A COMERCIOS -->
        <!-- REGLA: Ocultar si es Cajero -->
        @if (!esCajero)
        {
            <a asp-controller="Comercios" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-shop"></i> Volver a Comercios
            </a>
        }
    </div>

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-0">
            <table class="app-table">
                <thead>
                    <tr>
                        <th>Comercio</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Teléfono SINPE</th>
                        <th>Fecha de Registro</th>
                        <th>Fecha de Modificación</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Comercio?.Nombre</td>

                            <td>@item.Nombre</td>

                            <td>
                                @(item.Descripcion?.Length > 20
                                                            ? item.Descripcion.Substring(0, 20) + "..."
                                                            : item.Descripcion)
                        </td>

                            <td>@item.TelefonoSINPE</td>

                            <td>@item.FechaDeRegistro.ToString("dd/MM/yyyy")</td>

                            <td>@(item.FechaDeModificacion?.ToString("dd/MM/yyyy") ?? "—")</td>

                            <td>
                                <span class="badge @(item.Estado ? "bg-success" : "bg-danger")">
                                    @(item.Estado ? "Activo" : "Inactivo")
                                </span>
                            </td>

                            <td class="text-center">
                                <div class="btn-group">

                                    <!-- INICIO DE ACCIONES DE CRUD (EDITAR / ELIMINAR / BITÁCORA) -->
                                    <!-- REGLA: Ocultar si es Cajero -->
                                @if (!esCajero)
                                    {
                                        <a asp-action="Edit"
                                                               asp-route-id="@item.IdCaja"
                                                               class="btn btn-sm btn-gold">
                                            Editar
                                        </a>

                                        <a asp-area=""
                                                               asp-controller="Bitacora"
                                                               class="btn btn-sm btn-secondary">
                                            Bitácora
                                        </a>

                                        <a asp-action="Delete"
                                                               asp-route-id="@item.IdCaja"
                                                               class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    }
                                    <!-- FIN ACCIONES DE CRUD -->
                                    <!-- ACCIONES PERMITIDAS PARA EL CAJERO -->
                                    <a asp-action="Details"
                                                           asp-route-id="@item.IdCaja"
                                                           class="btn btn-sm btn-gold-outline">
                                        Detalles
                                    </a>

                                    <a asp-controller="Sinpe"
                                                           asp-action="VerPorCaja"
                                                           class="btn btn-sm btn-gold-outline">
                                        SINPE
                                    </a>

                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>